
def @ObjectOutline right obj {
{
0 0 moveto
0 ysize lineto
xsize ysize lineto
xsize 0 lineto
closepath 
1.0 0.0 0.0 setrgbcolor 
0 setlinewidth 
stroke
xmark 0 moveto
xmark ysize lineto
0 ymark moveto
xsize ymark lineto
0.0 1.0 0.0 setrgbcolor 
0 setlinewidth 
stroke
}       
        @Graphic obj
} 
# center hit, vertical gap of 0.5m, center hand and make it 6p smaller, 
# set the mark to left edge, condense object into one col and one row
def @Strike
  left hit
  right hand
{
  @OneRow @OneCol 0.5w @HShift {0.5w @HShift hit /0.5m 0.5w @HShift 0.75f @Font hand}
}

def @tsuL {Tsu @Strike L}
def @tsuR {Tsu @Strike R}
def @kuL {ku @Strike L}
def @tsuku {@OneRow @OneCol  0.5w @HShift {@tsuR | @kuL}}
def @doL {Do @Strike L}
def @doR {Do @Strike R}
def @koL {ko @Strike L}
def @roL {ro @Strike L}
def @doko {@OneRow @OneCol  0.5w @HShift {@doR | @koL}}   
def @doro {@OneRow @OneCol  0.5w @HShift {@doR | @roL}}
def @donL {Don @Strike L}
def @donR {Don @Strike R}
def @donko {@OneRow @OneCol  0.5w @HShift {@donR | @koL}}   
def @kaL {Ka @Strike L}
def @kaR {Ka @Strike R}
def @kaRL {Ka @Strike RL}
def @raL {ra @Strike L}
def @kara {@OneRow @OneCol  0.5w @HShift {@kaR | @raL}}
def @Kri {0.5w @HShift Kri}
def @Su {0.5w @HShift Su}
def @su {0.5w @HShift su}

def @kaRe {@OneRow @OneCol  0.5w @HShift {su- @Strike {} | @kaR }}
def @raLe {@OneRow @OneCol  0.5w @HShift { @raL | -su @Strike {}}}
def @sudo {@OneRow @OneCol  0.5w @HShift {@su @Char emdash | @doR}}
def @sudoL {@OneRow @OneCol  0.5w @HShift {@su @Char emdash | @doL}}
def @sudon {@OneRow @OneCol  0.5w @HShift {@su - | @donR}}
def @tsudon {@OneRow @OneCol  0.5w @HShift {@tsuR - | @donL}}
def @dashko {@OneRow @OneCol  0.5w @HShift { @Char emdash | @koL}}

macro @RowGap { /1.85vx }

